model Payment {
  id BigInt @id @default(autoincrement())

  amount      Int           @map("amount") @db.Integer
  description String?       @map("description") @db.VarChar(255)
  payUrl      String?       @map("pay_url") @db.VarChar(255)
  status      StatusPayment @default(PENDING) @map("status")

  paymentMethodId BigInt @map("payment_method_id") @db.BigInt
  orderId         BigInt @unique @map("order_id") @db.BigInt

  createdAt DateTime? @default(now()) @map("created_date") @db.Timestamptz(3)
  createdBy String    @map("created_by") @db.VarChar(36)
  updatedAt DateTime? @updatedAt @map("modified_date") @db.Timestamptz(3)
  updatedBy String?   @map("modified_by") @db.VarChar(36)

  paymentMethod PaymentMethod @relation(fields: [paymentMethodId], references: [id])
  Order         Order         @relation(fields: [orderId], references: [id])

  @@map("dt_payment")
}

enum StatusPayment {
  PENDING
  SUCCESSED
  CANCELLED
  FAILED
}
