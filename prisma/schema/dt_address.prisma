model Address {
  id BigInt @id @default(autoincrement())

  userId     BigInt  @map("user_id") @db.BigInt
  fullName   String  @map("full_name") @db.VarChar(100)
  phone      String? @map("phone") @db.VarChar(20)
  street     String  @map("street") @db.VarChar(255)
  ward       String? @map("ward") @db.VarChar(100)
  district   String? @map("district") @db.VarChar(100)
  province   String? @map("province") @db.VarChar(100)
  country    String  @default("VietNam") @map("country") @db.VarChar(100)
  postalCode String? @map("postal_code") @db.VarChar(20)
  isDefault  Boolean @default(false) @map("is_default") @db.Boolean

  createdAt DateTime? @default(now()) @map("created_date") @db.Timestamptz(3)
  createdBy String    @map("created_by") @db.VarChar(36)
  updatedAt DateTime? @updatedAt @map("modified_date") @db.Timestamptz(3)
  updatedBy String?   @map("modified_by") @db.VarChar(36)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, fullName, phone, street, ward, district, province, country, postalCode], name: "unique_address")
  @@map("dt_address")
}
