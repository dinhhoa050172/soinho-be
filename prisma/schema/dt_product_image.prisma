model ProductImage {
  id BigInt @id @default(autoincrement())

  url             String  @map("image_url") @db.Text
  isThumbnail     Boolean @map("is_thumbnail") @db.Boolean
  productId       BigInt? @map("product_id") @db.BigInt
  productCustomId BigInt? @map("product_custom_id") @db.BigInt

  createdAt DateTime? @default(now()) @map("created_date") @db.Timestamptz(3)
  createdBy String    @map("created_by") @db.VarChar(36)
  updatedAt DateTime? @updatedAt @map("modified_date") @db.Timestamptz(3)
  updatedBy String?   @map("modified_by") @db.VarChar(36)

  product       Product?       @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ProductCustom ProductCustom? @relation(fields: [productCustomId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([productId, url], name: "unique_product_image")
  @@map("dt_product_image")
}
