model Shipping {
  id BigInt @id @default(autoincrement())

  trackingCode String?        @map("tracking_code") @db.VarChar(100)
  shippedAt    DateTime?      @map("shipped_at") @db.Timestamptz(3)
  deliveredAt  DateTime?      @map("delivered_at") @db.Timestamptz(3)
  status       StatusShipping @default(CREATED) @map("status")

  shippingMethodId BigInt @map("shipping_method_id") @db.BigInt

  createdAt DateTime? @default(now()) @map("created_date") @db.Timestamptz(3)
  createdBy String    @map("created_by") @db.VarChar(36)
  updatedAt DateTime? @updatedAt @map("modified_date") @db.Timestamptz(3)
  updatedBy String?   @map("modified_by") @db.VarChar(36)

  shippingMethod ShippingMethod @relation(fields: [shippingMethodId], references: [id])
  Order          Order?

  @@map("dt_shipping")
}

enum StatusShipping {
  CREATED
  IN_TRANSIT
  DELIVERED
  FAILED
  RETURNED
}
