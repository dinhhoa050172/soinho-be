model ProductCustom {
    id BigInt @id @default(autoincrement())

    characterName   String   @map("character_name") @db.VarChar(255)
    characterDesign String   @map("character_design") @db.VarChar(255)
    height          Decimal? @map("height") @db.Decimal(10, 3)
    width           Decimal? @map("width") @db.Decimal(10, 3)
    length          Decimal? @map("length") @db.Decimal(10, 3)
    note            String?  @map("note") @db.Text
    accessory       String[] @map("accessory") @db.Text
    status          String?  @map("status") @db.VarChar(20)
    imageReturn     String[]  @map("image_return") @db.Text
    price           Decimal? @map("price") @db.Decimal(10, 3)
    isActive        Boolean? @default(true) @map("is_active") @db.Boolean
    userId          BigInt   @map("user_id")

    createdAt DateTime? @default(now()) @map("created_date") @db.Timestamptz(3)
    createdBy String    @map("created_by") @db.VarChar(36)
    updatedAt DateTime? @updatedAt @map("modified_date") @db.Timestamptz(3)
    updatedBy String?   @map("modified_by") @db.VarChar(36)

    user                  User                    @relation(fields: [userId], references: [id])
    ProductImage          ProductImage[]
    ProductCustomMaterial ProductCustomMaterial[]

    @@map("dt_product_custom")
}
